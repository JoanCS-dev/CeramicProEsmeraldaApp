<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CeramicProEsmeraldaApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/appColor</item>
        <item name="colorPrimaryVariant">@color/appColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/appColor</item>
        <item name="colorSecondaryVariant">@color/appColor</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/appColor</item>
        <item name="colorPrimaryVariant">@color/appColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/appColor</item>
        <item name="colorSecondaryVariant">@color/appColor</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="TextBold" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="TextDescription" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#808080</item>
    </style>
    <style name="TextAlternative" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="TextAlternative2" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/grayBlack</item>
    </style>
    <style name="ButtomAlternative">
        <item name="android:backgroundTint">#000000</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:backgroundTint">@android:color/white</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    <style name="ImageAppTheme">
        <item name="android:src">@drawable/ic_ceramic_pro</item>
    </style>
    <style name="ImageAppTheme2">
        <item name="android:src">@drawable/ic_ceramic_pro_plus_ceramic</item>
    </style>
    <style name="CVbgStyle">
        <item name="android:backgroundTint">#E5E5E5</item>
    </style>

    <style name="CVbgStyleTop">
        <item name="android:background">@color/black</item>
    </style>
    <style name="CVbgStyleBottom">
        <item name="android:background">@color/white</item>
    </style>

    <!-- Customize icon. -->

    <style name="BgStyle">
        <item name="android:backgroundTint">?android:attr/windowBackground</item>
        <item name="android:src">@drawable/ic_arrow_back_24</item>
    </style>

    <style name="MoneyStyle">
        <item name="android:src">@drawable/ic_money_48</item>
    </style>
    <style name="ThumbStyle">
        <item name="android:src">@drawable/ic_thumb_up_48</item>
    </style>
    <style name="TimeStyle">
        <item name="android:src">@drawable/ic_access_time_48</item>
    </style>
    <style name="AccountStyle">
        <item name="android:src">@drawable/ic_account_24</item>
    </style>
    <style name="QrStyle">
        <item name="android:backgroundTint">#e5e5e5</item>
        <item name="android:src">@drawable/ic_qr_code_black_24</item>
    </style>
    <style name="ArrowStyle">
        <item name="android:src">@drawable/ic_arrow_right_24</item>
    </style>

    <!-- Customize theme variable. -->
    <style name="VariableTheme">
        <item name="android:text">@string/themeAppStrWhite</item>
    </style>
</resources>