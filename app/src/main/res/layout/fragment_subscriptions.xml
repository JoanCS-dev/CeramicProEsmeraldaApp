<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.subscriptions.SubscriptionsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="20dp"
            android:paddingBottom="100dp">


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:strokeWidth="1dp"
                app:strokeColor="@color/grayBlack"
                app:cardElevation="10dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/CVbgStyleTop"
                        android:orientation="vertical"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="25sp"
                            android:text="@string/paquete_oro"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:text="@string/garantia_por_vida"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:fontFamily="@font/montserrat"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/CVbgStyleBottom"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:layout_margin="10dp"
                            android:text="@string/pack_oro_desc"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/incluye"
                            android:textStyle="bold"
                            style="@style/TextAlternative"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="@string/cuatro_capas_de_9h"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="@string/una_capa_de_capa_superior"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="@string/una_capa_de_9h_sobre_pl_sticos"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="@string/una_capa_de_rueda_y_calibre_en_las_caras_de_las_ruedas"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="@string/una_capa_de_vidrio_en_el_parabrisas"
                            android:fontFamily="@font/montserrat"
                            android:layout_marginBottom="10dp"/>

                    </LinearLayout>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:strokeWidth="1dp"
                app:strokeColor="@color/grayBlack"
                app:cardElevation="10dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/CVbgStyleTop"
                        android:orientation="vertical"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="25sp"
                            android:text="@string/paquete_plata"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:text="@string/garant_de_5_años"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:fontFamily="@font/montserrat"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/CVbgStyleBottom"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:layout_margin="10dp"
                            android:text="@string/PackPlata_Desc"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/incluye"
                            android:textStyle="bold"
                            style="@style/TextAlternative"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="@string/_1_capa_de_9h"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="@string/una_capa_de_capa_superior"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="@string/una_capa_de_9h_sobre_pl_sticos"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="@string/una_capa_de_rueda_y_calibre_en_las_caras_de_las_ruedas"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="@string/una_capa_de_vidrio_en_el_parabrisas"
                            android:fontFamily="@font/montserrat"
                            android:layout_marginBottom="10dp"/>
                    </LinearLayout>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:strokeWidth="1dp"
                app:strokeColor="@color/grayBlack"
                app:cardElevation="10dp"
                android:layout_marginBottom="50dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/CVbgStyleTop"
                        android:orientation="vertical"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="25sp"
                            android:text="@string/paquete_bronce"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:text="@string/garantia_2_años"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:fontFamily="@font/montserrat"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/CVbgStyleBottom"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="@string/PackBronce_Desc"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/incluye"
                            android:textStyle="bold"
                            style="@style/TextAlternative"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:fontFamily="@font/montserrat"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="@string/_1_capa_de_capa_superior"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="@string/_1_capa_de_top_coat"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="@string/_1_capa_de_top_coat_sobre_plasticos"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="@string/una_capa_de_vidrio_en_el_parabrisas"
                            android:fontFamily="@font/montserrat"
                            android:layout_marginBottom="10dp"/>

                    </LinearLayout>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</FrameLayout>