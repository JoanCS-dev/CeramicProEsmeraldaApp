<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="100dp">
            <TextView
                android:id="@+id/themeNameHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                style="@style/VariableTheme"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Porque_ceramic_pro"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                style="@style/TextAlternative"
                android:textSize="16sp"
                android:gravity="center"
                android:fontFamily="@font/montserrat"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/Inversion"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    style="@style/CVbgStyle">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/img_Inversion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/MoneyStyle"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/buena_inversion"
                            android:gravity="center"
                            android:textStyle="bold"
                            style="@style/TextAlternative2"
                            android:fontFamily="@font/montserrat"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/New"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    style="@style/CVbgStyle">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/img_New"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/ThumbStyle"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:gravity="center"
                            android:text="@string/siempre_nuevo"
                            style="@style/TextAlternative2"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/Maintenance"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    style="@style/CVbgStyle">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/img_Maintenance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/TimeStyle"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/menos_mantenimiento"
                            android:gravity="center"
                            android:textStyle="bold"
                            style="@style/TextAlternative2"
                            android:fontFamily="@font/montserrat"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/LiderMundial"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="40dp"
                style="@style/TextAlternative"
                android:textSize="16sp"
                android:gravity="center"
                android:fontFamily="@font/montserrat"/>
            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/image_slider"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                app:iss_auto_cycle="true"
                app:iss_period="2000"
                app:iss_delay="2000"
                app:iss_text_align="CENTER"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Forma_Parte"
                android:layout_marginTop="40dp"
                style="@style/TextAlternative"
                android:textSize="16sp"
                android:gravity="center"
                android:fontFamily="@font/montserrat"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/TeamWork"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/placeholder"
                        />
                </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="275dp">
        <Button
            android:id="@+id/RefreshButton"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/ButtomAlternative2"
            android:text="Reintentar"
            android:drawableLeft= "@drawable/ic_refresh"
            android:textAllCaps="false"
            android:textColor="@color/appColor"/>
    </LinearLayout>

</FrameLayout>