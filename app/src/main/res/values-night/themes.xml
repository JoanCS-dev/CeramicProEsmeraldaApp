<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CeramicProEsmeraldaApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/appColor</item>
        <item name="colorPrimaryVariant">@color/appColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/appColor</item>
        <item name="colorSecondaryVariant">@color/appColor</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Splash" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/appColor</item>
        <item name="colorPrimaryVariant">@color/appColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/appColor</item>
        <item name="colorSecondaryVariant">@color/appColor</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextBold" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="TextDescription" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#BFBFBF</item>
    </style>
    <style name="TextAlternative" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="TextAlternative2" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ButtomAlternative">
        <item name="android:backgroundTint">#505050</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    <style name="ImageAppTheme">
        <item name="android:src">@drawable/ic_ceramic_pro_black</item>
    </style>
    <style name="CVbgStyle">
        <item name="android:backgroundTint">#434343</item>
    </style>
    <style name="AccountStyle">
        <item name="android:src">@drawable/ic_account_24_white</item>
    </style>

    <!-- Customize icon. -->

    <style name="BgStyle">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:src">@drawable/ic_arrow_back_24_white</item>
    </style>

    <style name="MoneyStyle">
        <item name="android:src">@drawable/ic_money_48_white</item>
    </style>
    <style name="ThumbStyle">
        <item name="android:src">@drawable/ic_thumb_up_48_white</item>
    </style>
    <style name="TimeStyle">
        <item name="android:src">@drawable/ic_access_time_48_white</item>
    </style>

    <!-- Customize theme variable. -->
    <style name="VariableTheme">
        <item name="android:text">@string/themeAppStrDark</item>
    </style>
</resources>